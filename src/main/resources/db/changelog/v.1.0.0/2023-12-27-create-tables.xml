<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet logicalFilePath="2023-12-12-create-tables"
               id="2023-12-12-create-tables" author="r.u">
        <createTable tableName="c_currencies">
            <column name="c_id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="c_code" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="c_full_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="c_sign" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="e_exchangeRates">
            <column name="e_id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="e_base_currency_id" type="integer">
                <constraints referencedTableName="c_currencies" referencedColumnNames="c_id"
                             foreignKeyName="fk_e_exchangeRates_base_currency"/>
            </column>
            <column name="e_target_currency_id" type="integer">
                <constraints referencedTableName="c_currencies" referencedColumnNames="c_id"
                             foreignKeyName="fk_e_exchangeRates_target_currency"/>
            </column>
            <column name="e_rate" type="decimal">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="e_exchangeRates" indexName="idx_currency">
            <column name="e_base_currency_id"/>
            <column name="e_target_currency_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>